{%- block htmlPage -%}
<!doctype html>
<html lang="en-us">
<head>
  <meta charset="utf-8">
  <title>{% if title is defined %}{{ title }} | {% endif %}{{ siteName }}</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <link rel="stylesheet" href="/css/styles.css">
  <link rel="stylesheet" href="https://use.typekit.net/bxh6kyx.css">

  <link rel="dns-prefetch" href="{{ siteUrl }}">
  <link rel="preconnect" href="{{ siteUrl }}" crossorigin>

  {# -- Feeds -- #}
  <link rel="alternate" type="application/rss+xml" title="RSS" href="{{ siteUrl("/rss") }}" />
  <link rel="alternate" type="application/atom+xml" title="Atom" href="{{ siteUrl("/atom") }}" />
  
  {# -- IndieWeb -- #}
  <link rel="webmention" href="https://webmention.io/allanjamisen.com/webmention" />
  <link rel="pingback" href="https://webmention.io/allanjamisen.com/xmlrpc" />
  <link rel="pingback" href="https://webmention.io/webmention?forward={{ siteUrl }}" />
  
  <link rel="authorization_endpoint" href="https://indieauth.com/auth">
  <link rel="token_endpoint" href="https://tokens.indieauth.com/token">
  <link rel="microsub" href="https://aperture.p3k.io/microsub/107">
  <link rel="micropub" href="https://allanjamisen.com/micropub">

</head>


<body {% if bodyClass is defined %}class="{{ bodyClass }}"{% endif %}>

{% include "_partials/_header.twig" %}


{% block figureContent %}

{% endblock figureContent %}

<main id="main" role="main">

{% block bodyContent %}

{% endblock bodyContent %}

</main>

{% block footer %}
{% include "_partials/_footer.twig" %}
{% endblock footer %}      


{# -- Any JavaScript that should be included before </body> -- #}
{% block bodyJs %}
{% endblock bodyJs %}


</body>
</html>
{%- endblock htmlPage -%}